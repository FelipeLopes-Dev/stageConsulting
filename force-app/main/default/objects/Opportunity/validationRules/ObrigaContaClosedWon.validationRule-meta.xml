<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ObrigaContaClosedWon</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(StageName, &quot;Closed Won&quot;),
    ISBLANK(AccountId) 
)</errorConditionFormula>
    <errorMessage>É necessário ter uma Conta para fechar a Oportunidade como ganha.</errorMessage>
</ValidationRule>
